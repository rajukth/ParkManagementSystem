@using ParkManagementSystem.Web.Helpers
@model ParkManagementSystem.Web.Areas.Admin.ViewModels.OrgDetailVm

@{
    ViewBag.Title = "Organization Details";
    Layout = "_AdminLayout";
}
<div class="page-inner">
    <div class="row">
        <div class="col-md-3 d-flex justify-content-center align-items-center">
            <form asp-action="UploadLogo" asp-area="Admin" asp-controller="Organization" id="logoUploadForm" enctype="multipart/form-data">
                
                <image-upload-for for="Logo" src="@Model.LogoUrl"></image-upload-for>
            </form>
            <script>
                document.addEventListener("imageUploadChanged", function (e) {
                        console.log("Image changed!", e.detail);
                document.getElementById("logoUploadForm").submit();
                });
            </script>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-3">Name</div>
                <div class="col-md-9">@Model.Name</div>
            </div>
            <div class="row">
                <div class="col-md-3">Address</div>
                <div class="col-md-9">@Model.Address</div>
            </div>
            <div class="row">
                <div class="col-md-3">Slogan</div>
                <div class="col-md-9">@Model.Slogan</div>
            </div>

            <div class="row">
                <div class="col-md-3">Email</div>
                <div class="col-md-9">@Model.Email</div>
            </div>
            <div class="row">
                <div class="col-md-3">Contact Number</div>
                <div class="col-md-9">@Model.ContactNumber</div>
            </div>
            <div class="row">
                <div class="col-md-3">Contact Person</div>
                <div class="col-md-9">@Model.ContactPerson</div>
            </div>
            <div class="row">
                <div class="col-md-3">Pan No.</div>
                <div class="col-md-9">@Model.PanNumber</div>
            </div>
            <div class="row">
                <div class="col-md-3">Registration No.</div>
                <div class="col-md-9">@Model.RegistrationNumber</div>
            </div>

        </div>
    </div>
</div>